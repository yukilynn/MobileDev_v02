<!--         Rightend Arrow -->

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow" />

<!--         Business Partner Label -->

        <TextView
            android:id="@+id/tvBizPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/ivArrow"
            android:layout_marginLeft="21dp"
            android:paddingTop="5dip"
            android:paddingBottom="9dip"
            android:text="@string/strBizPartner"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />
<!--         Business Partner Name -->

        <TextView
            android:id="@+id/tvBizPartnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvBizPartner"
            android:layout_below="@+id/tvBizPartner"
            android:text="@string/strName"
            android:paddingBottom="9dip"
            android:textColor="#343434"
            android:textSize="20dip" />

</RelativeLayout>