<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hcl.sap.mobiledev_v02.MainList" >

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="top"
                android:contentDescription="@string/app_name"
                android:src="@drawable/human" />
        </LinearLayout>

<!--         Rightend Arrow -->

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow" />

<!--         Business Partner Label -->

        <TextView
            android:id="@+id/tvBizPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivArrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dip"
            android:layout_toRightOf="@+id/ivArrow"
            android:paddingBottom="9dip"
            android:text="@string/strBizPartner"
            android:textColor="#040404"
            android:textSize="25dip"
            android:textStyle="bold"
            android:typeface="sans" />

<!--         Business Partner Name -->

        <TextView
            android:id="@+id/tvBizPartnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivLogo"
            android:layout_alignLeft="@+id/tvBizPartner"
            android:layout_below="@+id/tvBizPartner"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dip"
            android:text="@string/strName"
            android:textColor="#343434"
            android:textSize="15dip" />

</RelativeLayout>